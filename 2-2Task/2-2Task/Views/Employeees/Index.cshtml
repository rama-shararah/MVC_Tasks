@model IEnumerable<_2_2Task.Models.Employeee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    .form-control{
        width:200px !important;
        display:inline-block;
    }
    .thumbnail {
        top: -50px;
        left: -35px;
        display: block;
        z-index: 999;
        cursor: pointer;
        -webkit-transition-property: all;
        -webkit-transition-duration: 0.3s;
        -webkit-transition-timing-function: ease;
    }

   
    .thumbnail:hover {
        transform: scale(5);
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Employeees", FormMethod.Get))
{
    <b>Search option:</b>
    @Html.RadioButton("searchby", "First_Name",true)<text>First Name</text>
    @Html.RadioButton("searchby", "Last_Nama", true)<text>Last Name</text>
    @Html.RadioButton("searchby", "Email", true)<text>Email</text><br />
    @Html.TextBox("search","", new {@class= "form-control" })
    <input id="Button1" type="submit" value="search"  class="btn"/>
    }
    <br />
    <table class="table table-hover">
        <tr>
            <th>
                First Name
                @*@Html.DisplayNameFor(model => model.First_Name)*@
            </th>
            <th>
                Last Name
                @*@Html.DisplayNameFor(model => model.Last_Nama)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                Job Title
                @*@Html.DisplayNameFor(model => model.Job_Title)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CV)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.First_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Nama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job_Title)
                </td>
                <td>
                    @if (item.Gender == true)
                    {
                        <span>Female</span>
                    }
                    else
                    {
                        <span>Male</span>
                    }

                    @*@Html.DisplayFor(modelItem => item.Gender)*@
                </td>
                <td>
                    <img class="thumbnail" src="~/pic/@item.Photo" width="50" />
                    @*@Html.DisplayFor(modelItem => item.Photo)*@
                </td>
                <td>
                    <a href="~/pdf/@item.CV" download>CV</a>
                    @*@Html.DisplayFor(modelItem => item.CV)*@
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
